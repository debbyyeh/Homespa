---
import { Image } from "astro:assets";
import banner_01 from "../assets/banner.jpg";
import banner_02 from "../assets/banner2.jpg";
---

<section
  class="bg-[#faf5f0] flex flex-col flex-col-reverse md:flex-row md:items-end md:justify-end md:px-16 mt-[100px] md:mt-[110px] md:relative"
>
  <div
    class="text-left space-y-2 text-primary mt-[-15px] z-10 md:absolute md:left-[6vw] md:top-[10vw] md:px-0 px-8"
  >
    <div class="md:text-[6.6vw] text-5xl font-light">Experience a</div>
    <div class="md:text-[6.6vw] text-5xl font-light">new day</div>
    <div class="md:text-[1.25rem] text-medium">美與心靈的交會之境</div>
  </div>

  <div class="relative md:w-[68%] aspect-[16/9] overflow-hidden">
    <Image
      src={banner_01}
      alt="Banner 1"
      class="absolute inset-0 w-full h-full object-cover animate-fade-cycle"
      loading="lazy"
    />
    <Image
      style={{
        "animation-delay": "5s",
      }}
      src={banner_02}
      alt="Banner 2"
      class="absolute inset-0 w-full h-full object-cover animate-fade-cycle"
      loading="lazy"
    />
  </div>
</section>
