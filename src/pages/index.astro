---
import About from "../components/About.astro";
import Banner from "../components/Banner.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />
  <Banner />
  <div class="note text-primary">首次新客體驗價享8折優惠</div>
  <About />
</Layout>

<style>
  .note {
    width: fit-content;
    display: flex;
    align-items: center;
    margin: 30px auto;
    border-bottom: 1px solid #c3a76c;
    padding-bottom: 10px;
  }

  .note::before {
    content: "";
    width: 18px;
    height: 18px;
    background: url(../assets/diamond.png) center/contain no-repeat;
    display: block;
    margin-right: 8px;
  }
</style>
