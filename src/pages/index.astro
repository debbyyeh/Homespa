---
import About from "../components/About.astro";
import Banner from "../components/Banner.astro";
import Evaluation from "../components/Evaluation.astro";
import Reservation from "../components/Reservation.astro";
import Service from "../components/Service.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Banner />
  <div class="note text-primary mx-auto mt-10 mb-10 tracking-[0.1em]">
    好友推推有9折<br />
    會員VIP當月另享壽星優惠
  </div>
  <About />
  <Service />
  <Evaluation />
  <Reservation />
</Layout>

<style>
  .note {
    width: fit-content;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #c3a76c;
    padding-bottom: 10px;
  }

  .note::before {
    content: "";
    width: 18px;
    height: 18px;
    background: url(../assets/diamond.png) center/contain no-repeat;
    display: block;
    margin-right: 8px;
  }
</style>
